<table id="purchase_history_table" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Seller Name</th>
                <th>Timestamp</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
            <% @inventories.each do |inventory| %>
                <tr>
                    <td><%= Item.find(inventory.item_id).name %></td>
                    <td><%= Item.find(inventory.item_id).category %></td>
                    <td><%= inventory.price %></td>
                    <td><%= inventory.qty %></td>
                    <td><%= User.find(Market.find(inventory.item_id).user_id).name %></td>
                    <td><%= inventory.timestamp %></td>
                    <% if(Item.find(inventory.item_id).picture.attached?) %>
                        <td><%= image_tag Item.find(inventory.item_id).picture.variant(:thumb75) %></td>
                    <% else %>
                        <td>This item has no picture</td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('#purchase_history_table').DataTable({
                "columnDefs": [
                    { "targets": [6], "searchable": false },
                    { "targets": [6], "orderable": false }
                ],
            })
        });
    </script>